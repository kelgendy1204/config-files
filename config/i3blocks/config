# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks
#
# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
#
# The top properties below are applied to every block, but can be overridden.
# Each block command defaults to the script name to avoid boilerplate.
# Change $SCRIPT_DIR to the location of your scripts!
# command=$SCRIPT_DIR/$BLOCK_NAME
separator_block_width=15
# markup=none

# Volume indicator
[volume]
label=♪ 
command=~/.config/i3blocks/scripts/volume/volume
interval=once
signal=10

# Memory usage
[memory]
label=MEM: 
command=~/.config/i3blocks/scripts/memory/memory
interval=10

# Disk output
[disk-io]
command=~/.config/i3blocks/scripts/disk-io/disk-io
interval=persist
markup=pango
LABEL= 
instance=/^sda/
WIDTH=2

# Disk usage
[disk]
label=Disk Usage: 
command=~/.config/i3blocks/scripts/disk/disk
DIR=/
interval=30

# Network interface monitoring
[iface]
label=IPv4: 
command=~/.config/i3blocks/scripts/iface/iface
color=#00FF00
interval=10

[wifi]
#INTERFACE=wlp3s0
label=wifi:
interval=10
separator=false

[bandwidth3]
command=~/.config/i3blocks/scripts/bandwidth3/bandwidth3
interval=persist
markup=pango
LABEL=Net: 
#IFACE=[automatically determined]
#DT=3
#UNIT=Mb
#Exposed variables: rx, wx, tx, unit, iface
#PRINTF_COMMAND=printf "${LABEL}%-5.1f/%5.1f %s/s\n", rx, wx, unit;

# CPU usage
[cpu_usage]
label=CPU: 
command=~/.config/i3blocks/scripts/cpu_usage/cpu_usage
interval=10
min_width=CPU 100.00%
#T_WARN=50
#T_CRIT=80
#DECIMALS=2

# Battery indicator
[battery2]
label=⚡
command=~/.config/i3blocks/scripts/battery2/battery2
markup=pango
interval=30

# Keyboard layout
[kbdd_layout]
command=~/.config/i3blocks/scripts/kbdd_layout/kbdd_layout
interval=persist

# Date Time
[time]
command=~/.config/i3blocks/scripts/time/time
interval=1
STRFTIME_FORMAT=%Y-%m-%d %I:%M %p
TZONES=$DEFAULT_TZ,Brazil/East,Australia/Brisbane,Asia/Calcutta
TZ_LABELS=,Brazil,AU,Hyderabad

